<mah:MetroWindow x:Class="SiraOrganizer.MainWindow"
        mc:Ignorable="d"
        WindowStartupLocation="CenterScreen"
        xmlns:local="clr-namespace:SiraOrganizer"
        GlowBrush="{DynamicResource AccentColorBrush}"
        Title="Sira Organizer" Height="650" Width="1200"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:mah="clr-namespace:MahApps.Metro.Controls;assembly=MahApps.Metro"
        >
    <Grid Margin="20">
        <mah:MetroHeader VerticalAlignment="Top" HorizontalAlignment="Center">
            <TextBlock Text="{Binding Greeting}" FontSize="50" />
        </mah:MetroHeader>
        <Button Click="FindBeatSaberDir_Click" VerticalAlignment="Bottom" HorizontalAlignment="Center">
            <TextBlock Text="Find Beat Saber Directory" FontSize="15" Margin="5" />
        </Button>
    </Grid>
</mah:MetroWindow>
